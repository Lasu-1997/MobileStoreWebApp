@page
@model MobileStoreWebApp.Pages.Admin.Products.IndexModel
@{
}

<h2 class="text-center mb-5">List of Products</h2>
<div cite="row mb-5">
    <div class="col">
        <a class="btn btn-primary" href="/Admin/Products/Create">Add New Product</a>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Created At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Products)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Brand</td>
                <td>@item.Category</td>
                <td>RS. @item.Price</td>
                <td>@item.Description</td>
                <td><img src="~/images/products/@item.ImageFIleName" width="100" /></td>
                <td>@item.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-primary btn-sm" href="/Admin/Products/Edit?id=@item.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Admin/Products/Delete?id=@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>